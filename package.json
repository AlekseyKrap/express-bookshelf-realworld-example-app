{
  "name": "express-bookshelf-realworld-example-app",
  "private": true,
  "version": "1.0.0",
  "license": "MIT",
  "author": "Tane Morgan (https://github.com/tanem)",
  "description": "RealWorld example app using Express and Bookshelf.",
  "scripts": {
    "lint": "eslint .",
    "test": "bin/test.sh",
    "start": "bin/start.sh",
    "db:truncate": "bin/truncate.js",
    "docker:db:truncate": "docker-compose exec node yarn db:truncate",
    "docker:test": "docker-compose -f docker-compose.yml -f docker-compose.test.yml run node yarn test",
    "docker:start": "docker-compose -f docker-compose.yml -f docker-compose.development.yml up"
  },
  "dependencies": {
    "async-error-catcher": "^1.2.0",
    "bcrypt": "3.0.0",
    "body-parser": "1.18.3",
    "bookshelf": "0.13.3",
    "boom": "^7.2.0",
    "checkit": "0.7.0",
    "convict": "4.3.2",
    "cookie-parser": "1.4.3",
    "cors": "^2.8.4",
    "express": "4.16.3",
    "express-interceptor": "^1.2.0",
    "express-pino-logger": "^4.0.0",
    "helmet": "^3.13.0",
    "jsonwebtoken": "8.3.0",
    "knex": "0.15.2",
    "lodash": "4.17.11",
    "passport": "0.4.0",
    "passport-anonymous": "^1.0.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "1.0.0",
    "pg": "7.4.3",
    "pino": "^5.6.1",
    "pino-pretty": "^2.2.0",
    "require-directory": "^2.1.1",
    "serve-favicon": "2.5.0",
    "slug": "^0.9.1",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "add-matchers": "^0.5.0",
    "chance": "^1.0.16",
    "coveralls": "^3.0.2",
    "eslint": "5.6.0",
    "eslint-config-prettier": "3.0.1",
    "eslint-plugin-jest": "21.22.0",
    "eslint-plugin-prettier": "2.6.2",
    "jest": "23.6.0",
    "moment": "^2.22.2",
    "nodemon": "^1.18.4",
    "prettier": "1.14.2",
    "rimraf": "2.6.2",
    "supertest": "3.3.0"
  },
  "jest": {
    "coverageDirectory": "<rootDir>/_coverage/",
    "coveragePathIgnorePatterns": [
      "<rootDir>/config/"
    ],
    "coverageReporters": [
      "lcov",
      "text-summary"
    ],
    "globalSetup": "<rootDir>/test-support/global-setup.js",
    "globalTeardown": "<rootDir>/test-support/global-teardown.js",
    "setupTestFrameworkScriptFile": "<rootDir>/test-support/setup-test-framework.js",
    "testEnvironment": "<rootDir>/test-support/test-environment.js"
  }
}
